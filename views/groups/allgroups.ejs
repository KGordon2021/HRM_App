<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="public/styles.css">
    <title>Document</title>
</head>
<body>
    <div class="pages">
        <%- include('../partials/nav.ejs') %>
    </div>
    <div class="tables table2">
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Group ID #</th>
                <th>Orientation Type</th>
                <th>Date Scheduled</th>
                <th>Currently Enrolled</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            
               
            <% if(data.length) {
                for(var i = 0; i < data.length; i++) { 
            %>
            <tr>
                <td class="centered"><%= data[i].id %></td>
                <td><%= data[i].group_id %></td>
                <td><%= data[i].orientation_type %></td>
                <td class="brk"><%= new Date(data[i].appointment_date).toLocaleDateString('fr-CA') %></td>
                <td><%= data[i].currently_enrolled%></td>
                <td class="centered">
                    <a class="light" href="/existing_groups/update/<%=data[i].id%>">View</a>
                    <a class="light" href="/existing_groups/update/<%=data[i].id%>">Update</a> <!--this refers to the index of the current data collection which is currently stored as data-->
                    <a class="warn" href="/existing_groups/delete/<%=data[i].id%>">Remove</a>
                </td>
                
            </tr>
               <% }
          }else{ %>
            <tr>
                <td>No Interns Listed</td>
            </tr>
           <% } %>
        </tbody>
    </table>
    <div class="addbtn">
        <a href="addNewGroup">Add New Group</a>
        </div>
    </div>
        </tbody>
        
    </table>
    </div>
</body>
</html>